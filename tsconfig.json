{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "esnext"
    ],
    "jsx": "preserve",
    "jsxFactory": "React.createElement",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "removeComments": false,
    "baseUrl": ".",
    "paths": {
    }
  },
  "include": [
    "src",
    "test"
  ]
}
