{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "nonEmptyString": {
      "type": "string",
      "minLength": 1
    },
    "inputOption": {
      "oneOf": [
        {
          "$ref": "#/definitions/nonEmptyString"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "filename"
          ],
          "properties": {
            "filename": {
              "type": "string"
            },
            "output": {
              "type": "string"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "content",
            "output"
          ],
          "properties": {
            "content": {
              "type": "string"
            },
            "output": {
              "type": "string"
            }
          }
        }
      ]
    },
    "matchArray": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "instanceof": "RegExp"
          },
          {
            "$ref": "#/definitions/nonEmptyString"
          }
        ]
      }
    }
  },
  "type": "object",
  "additionalProperties": false,
  "required": [
    "input"
  ],
  "properties": {
    "context": {
      "type": "string"
    },
    "input": {
      "oneOf": [
        {
          "$ref": "#/definitions/inputOption"
        },
        {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/inputOption"
          }
        }
      ]
    },
    "output": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "path": {
          "type": "string"
        },
        "moduleDir": {
          "type": "string"
        },
        "namedModule": {
          "type": "string",
          "enum": [
            "id",
            "hash",
            "named"
          ]
        }
      }
    },
    "include": {
      "$ref": "#/definitions/matchArray"
    },
    "exclude": {
      "$ref": "#/definitions/matchArray"
    },
    "alias": {
      "type": "object",
      "patternProperties": {
        ".+": {
          "$ref": "#/definitions/nonEmptyString"
        }
      }
    },
    "cache": {
      "type": "boolean"
    },
    "plugins": {
      "type": "array",
      "items": {
        "instanceof": "Function"
      }
    },
    "advanced": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "parseOptions": {
          "type": "object"
        }
      }
    }
  }
}
