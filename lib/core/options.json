{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "nonEmptyString": {
      "type": "string",
      "minLength": 1
    },
    "inputOption": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "path",
            "output"
          ],
          "properties": {
            "path": {
              "$ref": "#/definitions/nonEmptyString"
            },
            "output": {
              "$ref": "#/definitions/nonEmptyString"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "content",
            "output"
          ],
          "properties": {
            "content": {
              "$ref": "#/definitions/nonEmptyString"
            },
            "output": {
              "$ref": "#/definitions/nonEmptyString"
            }
          }
        }
      ]
    },
    "matchArray": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "instanceof": "RegExp"
          },
          {
            "$ref": "#/definitions/nonEmptyString"
          }
        ]
      }
    }
  },
  "type": "object",
  "additionalProperties": false,
  "required": [
    "input"
  ],
  "properties": {
    "context": {
      "$ref": "#/definitions/nonEmptyString"
    },
    "input": {
      "oneOf": [
        {
          "$ref": "#/definitions/inputOption"
        },
        {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/inputOption"
          }
        }
      ]
    },
    "cache": {
      "type": "boolean"
    },
    "plugins": {
      "type": "array",
      "items": {
        "instanceof": "Function"
      }
    },
    "module": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "outputDir": {
          "$ref": "#/definitions/nonEmptyString"
        },
        "include": {
          "$ref": "#/definitions/matchArray"
        },
        "exclude": {
          "$ref": "#/definitions/matchArray"
        },
        "alias": {
          "type": "object",
          "patternProperties": {
            ".+": {
              "$ref": "#/definitions/nonEmptyString"
            }
          }
        }
      }
    },
    "advanced": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "parseOptions": {
          "type": "object"
        }
      }
    }
  }
}
