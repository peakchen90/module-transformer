{
  "name": "module-transformer",
  "version": "0.0.1-alpha.0",
  "description": "transform the npm modules to the dest path",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "start": "tsc -w",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint {lib,test}/**/*.ts --fix",
    "prepublishOnly": "npm run build",
    "postpublish": "node -e ''"
  },
  "homepage": "https://github.com/peakchen90/module-transformer",
  "bugs": {
    "url": "https://github.com/peakchen90/module-transformer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:peakchen90/module-transformer.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "author": "peakchen90 <1558267774@qq.com>",
  "license": "MIT",
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">= 8.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "verbose": true,
    "transform": {
      "\\.tsx?$": "ts-jest"
    },
    "collectCoverage": false,
    "testMatch": [
      "**/test/**/*.{test,spec}.{ts,tsx}"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "builtin-modules": "^3.1.0",
    "del": "^6.0.0",
    "fs-extra": "^9.0.1",
    "hash-sum": "^2.0.0",
    "lodash": "^4.17.20",
    "schema-utils": "^3.0.0"
  },
  "devDependencies": {
    "@babel/generator": "^7.12.10",
    "@types/babel__core": "^7.1.12",
    "@types/babel__generator": "^7.6.2",
    "@types/fs-extra": "^9.0.4",
    "@types/hash-sum": "^1.0.0",
    "@types/invariant": "2.2.34",
    "@types/jest": "26.0.13",
    "@types/lodash": "^4.14.165",
    "@typescript-eslint/eslint-plugin": "4.0.1",
    "@typescript-eslint/parser": "4.0.1",
    "chalk": "^4.1.0",
    "eslint": "7.8.1",
    "eslint-config-alloy": "3.8.0",
    "husky": "^4.2.5",
    "jest": "26.4.2",
    "lint-staged": "10.3.0",
    "ora": "5.0.0",
    "ts-jest": "26.3.0",
    "typescript": "4.0.2"
  }
}
